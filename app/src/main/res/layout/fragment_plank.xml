<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.plank.PlankFragment">

    <ProgressBar
        android:id="@+id/progressTime"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_340"
        android:layout_marginTop="@dimen/dp_16"
        android:indeterminateTint="@color/color_carnation"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonStartPlank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_pastel_green"
        android:text="@string/title_start_plank"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressTime" />

    <TextView
        android:id="@+id/textTimePlank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_time_plank"
        android:textSize="@dimen/sp_32"
        app:layout_constraintBottom_toBottomOf="@+id/progressTime"
        app:layout_constraintEnd_toEndOf="@+id/progressTime"
        app:layout_constraintStart_toStartOf="@+id/progressTime"
        app:layout_constraintTop_toTopOf="@+id/progressTime" />

</androidx.constraintlayout.widget.ConstraintLayout>
